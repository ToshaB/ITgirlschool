<body>
    <h1 style="color:rgb(80, 80, 80)">Задание week 13</h1>
    <h2 style="color: rgb(87, 86, 86);">Давай познакомимся:</h2>
    <button class="button-page" onclick="question()">Нажми на кнопку </button>
    <h2 style="color: rgb(77, 75, 76);">Калькулятор</h2>
    <div class="calc">
        
        <button class="" onclick="plus()">+ </button>
        <button class="" onclick="minus()">- </button>
        <button class="" onclick="dividing()">/ </button>
        <button class="" onclick="multiply()">* </button>

    </div>


    <script type="text/javascript">
        
    function question() {
        name = prompt('Как тебя зовут?');
        alert(`Привет, ${name}`);
    }

    function plus() {
        let a = prompt("Введите первое число");
        let b = prompt("Введите второе число");
        let sum = Number(a) + Number(b);
        alert(`Ваш ответ: ${sum}`);
    }

    function minus() {
        let a = prompt("Введите первое число");
        let b = prompt("Введите второе число");
        let min = Number(a) - Number(b);
        alert(`Ваш ответ: ${min}`);
    }

    function dividing() {
        let a = prompt("Введите первое число");
        let b = prompt("Введите второе число");
        let dividing = Number(a) / Number(b);
        alert(`Ваш ответ: ${dividing}`);
    }

    function multiply() {
        let a = prompt("Введите первое число");
        let b = prompt("Введите второе число");
        let multiply = Number(a) * Number(b);
        alert(`Ваш ответ: ${multiply}`);
    }

    </script>
